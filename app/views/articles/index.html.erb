<h1>Articles</h1>
<h2><%= link_to "Add article", new_article_path %></h2>
<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Url</th>
    <th class="text-center" colspan='2'>Actions</th>
    <th class="text-center">Rating</th>
    <th class="text-center">Number of comments</th>
  </tr>
  </thead>

  <tbody>
  <% @articles.each do |article| %>
    <tr>
      <td><%= link_to article.title, article_path(article) %></td>
      <td><a href="<%= article.url %>" target="_blank"><%= article.url %></a></td>
      <td>
        <%= link_to article_path(article), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
          <i class="fa fa-trash" style="color: rgba(196,0,0,1); font-size: 18px;"></i>
        <% end %>
      </td>
      <td><%= link_to 'Analyze', analyze_article_path(article), class: 'btn btn-success' %></td>
      <td><%= "placeholder" %></td>
      <td class="text-center"><%= article.number_of_comments %></td>
    </tr>
  <% end %>
  </tbody>
</table>


